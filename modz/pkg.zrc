pkg-help ()
{
    echo "Usage: pkg --libs,--cflags PKG1 PKG2"
}
pkg-cd ()
{
    eval "local dir=\"\$pkg_${1}[wd]\""
    if (( $#argv > 1 )); then
        dir="$dir"/"${argv[2,-1]}"
    fi
    if [[ -d "$dir" ]]; then
        cd "$dir"
    else
        return $?
    fi
}
pkg-pushd ()
{
    # echo ":: pkg-pushd $1" WARNING: echo not here, add to thee argv
    eval "pushd -q  \"\$pkg_${1}[wd]\""
    # wd="$PWD"
}
pkg-popd ()
{
    popd -q
    # wd="$PWD"
}
pkg-pushid ()
{

    # current pkg name
    if [[ $PKG != $1 ]] ; then
        PKG="$1";
        eval "wd=\"\$pkg_${PKG}[wd]\""
    fi
    PKG_STK=($PKG $PKG_STK)
    # alias @="pkg $PKG"
}
pkg-popid ()
{
    PKG_STK=($PKG_STK[2,-1])
    (( $#PKG_STK > 0 )) &&
    {
        PKG=$PKG_STK[1]
        if (( $#PKG > 0 )) ; then
            eval "wd=\"\$pkg_${PKG}[wd]\""
        # else
        #   wd=""
        fi
        # alias @="pkg $PKG"
    }
}

