pkg:proto:run ()
{
    echo $PWD
    ./"${1}" $argv[2,-1]
}
pkg:proto:make ()
{
    (( $#argv == 0 )) && argv=(`@ : TARGETS`);
    (( $#argv )) &&
    {
        # local wd=`@ : wd`
        local tgt
        # local tgtf
        local deps
        while (( $#argv ));
        do
            tgt=$1;
            shift;
            deps=(`@ : $tgt`)
            if (( $#deps )) ; then
# TODO: ?should we loop over deps for more MakeFile compat?
                if [ ! -f "${tgt}" ] || fs-ot "${tgt}" ${deps} ; then
                    @ ${tgt} ${deps}
                else
                    echo unchanged: $tgt
                fi
            else
                @ ${tgt}
            fi
        done
    }
}

