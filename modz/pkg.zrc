pkg-help ()
{
    echo "Usage: pkg --libs,--cflags PKG1 PKG2"
}

pkg-popd () {
    popd -q
    wd="$PWD"
}

pkg-pushd ()
{
    eval "pushd -q  \"\$pkg_${1}[wd]\""
    wd="$PWD"
}


pkg-libs ()                             # pkg --libs pkg1 pkg2 ...
{
    local o=""
    for _name_ in "$@";
    do
        eval " o+=\"\$pkg_${_name_}_libs \"; "
    done
    echo $o
}

pkg-cflags ()                           # pkg --cflags pkg1 pkg2 ...
{
    local o=""
    for _name_ in "$@";
    do
        eval " o+=\"\$pkg_${_name_}_cflags \"; "
    done
    echo $o
}

